@page
@model Mission09_brd48.Pages.PurchaseModel
@{
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-Mg6I8b56BV9LJ7ny+5eIUV5vmr/ZrM85Jz7/x37Dcw/QpZ1JxZLlXv7Yn2zG/m+/+32mfxtJiOUpxnBtQavhQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<h1>Your cart</h1>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.cart.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>$@i.Book.Price</td>
                <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>

                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="bookId" value="@i.Book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>

                    </form>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="MadePurchase">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>

